<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_weight="0.25"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:src="@drawable/facepost"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_weight=".75"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <android.support.design.widget.TextInputLayout
            android:theme="@style/AppBlue"
            android:id="@+id/fullNameRegText"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textSize="18sp"
                android:hint="Full Name"
                android:inputType="textEmailAddress"
                
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:theme="@style/AppBlue"
            android:id="@+id/emailRegText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textSize="18sp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:theme="@style/AppBlue"
            android:id="@+id/passwordRegText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textSize="18sp"
                android:hint="Password"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:theme="@style/AppBlue"
            android:id="@+id/confirmpasswordRegText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textSize="18sp"
                android:hint="confirm password"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/RegisterButton"
            android:text="Register"
            android:background="@drawable/roundbutton"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="45dp"/>

        <TextView
            android:id="@+id/clickToLogin"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:text="Click here to Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        </LinearLayout>

</LinearLayout>

